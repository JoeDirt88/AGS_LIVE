@model IEnumerable<AGS.ServerAPI.tblReports>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Reports</h2>

<div>
    <p>
        @Html.ActionLink(" Create new", "Create", null, new { @class = "btn btn-primary fa fa-plus" })
    </p>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.strReport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.strEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.strContactNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bIsDeleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.strReport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bIsDeleted)
            </td>
            <td class="col-md-3">
                @Html.ActionLink(" ", "Edit", new { id = item.iReportID }, new { @class = "btn fa fa-pencil" })
                @Html.ActionLink(" ", "Details", new { id = item.iReportID }, new { @class = "btn fa fa-book" })
                @Html.ActionLink(" ", "Delete", new { id = item.iReportID }, new { @class = "btn fa fa-trash" })
            </td>
        </tr>
    }

</table>

<hr />
<div>
    <a href="@Url.Action("Administration","Home")" class="btn btn-primary col-md-3">
        Return to Admin
    </a>
</div>