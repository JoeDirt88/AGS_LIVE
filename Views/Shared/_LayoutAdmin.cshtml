@using System.Web.UI.WebControls
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        @if ((clsUsers)Session["clsUser"] != null)
        {
            @Html.ActionLink(" Logout", "Logout", "Login", new { area = "" }, new { @class = "navbar-brand btn btn-primary fa fa-sign-out float-right" })
            <h1 class="container navbar-header">Administration</h1>
            <hr />
        }
        else
        {
            Response.Redirect(Url.Action("Logout","Login"));
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - A.G.Softworks <i class="fa fa-bug"></i> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/font-awesome.css")
    @RenderSection("scripts", required: false)
</body>
</html>
